{
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "rules": {
	  "no-console": "off",
	  "indent": ["error", "tab"],
	 "quotes": ["error", "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
	 "no-param-reassign": "off",
	 "flow-vars/define-flow-type": 1,
	 "flow-vars/use-flow-type": 1,
	 "react/prop-types": 0,
	 "no-shadow": "off"
	},
	"globals": {
    "$": false,
	"io": true,
	"React": false
	},
	"parser": "babel-eslint",
	"plugins": [
	    "react",
		"flow-vars",
		"babel"
	],
	"parserOptions": {
    	"ecmaFeatures": {
    		"jsx": true
    	}
	},
	"env": {
		"browser": true
	}
}
